<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_app_switch">
        <SwitchPreference
            android:defaultValue="@bool/pref_def_value_app_main_switch"
            android:key="@string/pref_key_app_main_switch"
            android:summary="@string/pref_app_main_switch_summary"
            android:title="@string/pref_app_main_switch" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_experiment">
        <SwitchPreference
            android:defaultValue="@bool/pref_def_value_notification_listener"
            android:key="@string/pref_key_notification_listener"
            android:summary="@string/pref_notification_listener_summary"
            android:title="@string/pref_notification_listener" />

        <SwitchPreference
            android:defaultValue="@bool/pref_def_value_default_sms_app"
            android:key="@string/pref_key_default_sms_app"
            android:summary="@string/pref_default_sms_app_summary"
            android:title="@string/pref_default_sms_app" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_cate_code">

        <EditTextPreference
            android:key="@string/pref_key_sms_contains"
            android:title="@string/pref_sms_contains" />

        <EditTextPreference
            android:key="@string/pref_key_regexp"
            android:title="@string/pref_regexp" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_cate_express">

        <EditTextPreference
            android:key="@string/pref_key_express_sms_contains"
            android:title="@string/pref_express_sms_contains" />

        <EditTextPreference
            android:key="@string/pref_key_express_regexp"
            android:title="@string/pref_express_regexp" />

        <EditTextPreference
            android:key="@string/pref_key_express_place_regexp"
            android:title="@string/pref_express_place_regexp" />
    </PreferenceCategory>
</PreferenceScreen>